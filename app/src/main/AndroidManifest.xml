<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androiddev.josephelliott.workoutcalendar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Activities.SplashPage.Splash"
            android:theme="@style/AppTheme.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.HomePage.CalendarActivity"
            android:label="@string/app_name"
            android:parentActivityName=".Activities.SplashPage.Splash"
            android:screenOrientation="portrait">
        </activity>


        <activity
            android:name=".Activities.AddingWorkouts.AddWorkoutActivity"
            android:label="@string/add_workout_activity_name"
            android:parentActivityName=".Activities.HomePage.CalendarActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode = "stateVisible">
        </activity>


        <activity
            android:name=".Activities.Presets.PresetsActivity"
            android:label="@string/preset_activity_name"
            android:parentActivityName=".Activities.HomePage.CalendarActivity"
            android:screenOrientation="portrait">
        </activity>


        <activity
            android:name=".Activities.Running.TimerActivity"
            android:label="@string/timer_activity_name"
            android:parentActivityName=".Activities.HomePage.CalendarActivity"
            android:screenOrientation="portrait">
        </activity>


        <activity
            android:name=".Activities.Misc.HelpActivity"
            android:label="@string/help_activity_name"
            android:parentActivityName=".Activities.HomePage.CalendarActivity"
            android:screenOrientation="portrait">
        </activity>


        <activity
            android:name=".Activities.Misc.SettingsActivity"
            android:label="@string/settings_activity_name"
            android:parentActivityName=".Activities.HomePage.CalendarActivity"
            android:screenOrientation="portrait">
        </activity>


    </application>

</manifest>
