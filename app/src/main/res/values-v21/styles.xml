<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Default App Theme -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
    </style>
    <style name="ActionBarTheme" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
        <item name="actionOverflowButtonStyle">@android:color/white</item>
        <item name="android:actionOverflowMenuStyle">@android:color/white</item>
    </style>
    <style name="ActionBarTitleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- Default App Theme -->


    <!-- Splash Screen Styles -->
    <style name="AppTheme.Splash" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:actionBarStyle">@style/ActionBarTheme.Splash</item>
        <item name="android:background">@color/primary_dark</item>
    </style>
    <style name="ActionBarTheme.Splash" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:displayOptions">disableHome</item>
    </style>
    <!-- Splash Screen Styles -->

    <!-- Workout Dialog Styles -->
    <style name="WorkoutDialog" parent="@android:style/Theme.Material.Dialog">
        <item name="android:background">@android:color/white</item>
        <item name="android:windowTitleStyle">@style/WorkoutDialogTitleStyle</item>
    </style>
    <style name="WorkoutDialogTitleStyle" parent="android:Widget.TextView">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- Workout Dialog Styles -->


</resources>
