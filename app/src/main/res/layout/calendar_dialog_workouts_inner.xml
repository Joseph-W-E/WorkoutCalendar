<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/dialog_inner_workout_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:text="Title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/accent"/>

    <TextView
        android:id="@+id/dialog_inner_workout_location"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="8dp"
        android:textSize="20sp"
        android:text="Location"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/accent"/>

    <TextView
        android:id="@+id/dialog_inner_workout_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="20sp"
        android:text="Description"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/dialog_inner_workout_button_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_edit_black_24dp"
            android:alpha="0.5"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/ripple"
            android:layout_margin="16dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/dialog_inner_workout_button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_delete_black_24dp"
            android:alpha="0.5"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ripple"
            android:layout_margin="16dp"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>