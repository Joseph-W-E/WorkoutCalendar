<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Chronometer
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:id="@+id/timer_chronometer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="60sp"
        android:textColor="@color/accent"
        android:background="@drawable/circle"
        android:gravity="center"
        android:layout_marginTop="48dp"
        android:textColorHighlight="@color/primary"/>

    <CheckBox
        android:id="@+id/timer_toggle_running"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/running"
        android:layout_below="@id/timer_chronometer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="24sp"
        android:textColor="@color/accent"/>

    <Space
        android:id="@+id/timer_space"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/timer_reset_timer"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@mipmap/ic_refresh_black_24dp"
        android:backgroundTint="@color/accent"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/timer_save"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@mipmap/ic_done_black_24dp"
        android:backgroundTint="@color/accent"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/timer_change_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
       android:layout_toStartOf="@id/timer_space"
        android:layout_marginBottom="16dp"
        android:background="@mipmap/ic_image_black_24dp"
        android:backgroundTint="@color/accent"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/timer_change_date"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/timer_space"
        android:layout_marginBottom="16dp"
        android:background="@mipmap/ic_today_black_24dp"
        android:backgroundTint="@color/accent"
        style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>